<Window x:Class="SnakeGame.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Имя пользователя" Margin="0,0,0,2"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="Пароль" Margin="0,5,0,2"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Войти" Width="100" Margin="5" Click="LoginButton_Click"/>
                <Button Content="Регистрация" Width="100" Margin="5" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
