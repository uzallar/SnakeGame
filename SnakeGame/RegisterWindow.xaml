<Window x:Class="SnakeGame.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Имя пользователя" Margin="0,0,0,2"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,5"/>
            <TextBlock Text="Пароль" Margin="0,5,0,2"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
