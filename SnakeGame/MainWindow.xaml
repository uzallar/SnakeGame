<Window x:Class="SnakeGame.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        Focusable="True"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="Змейка" Height="600" Width="700"
        Background="#D0F0C0">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter2"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Up" Command="{Binding MoveUpCommand}" />
        <KeyBinding Key="Down" Command="{Binding MoveDownCommand}" />
        <KeyBinding Key="Left" Command="{Binding MoveLeftCommand}" />
        <KeyBinding Key="Right" Command="{Binding MoveRightCommand}" />
        <KeyBinding Key="Esc" Command="{Binding PauseCommand}"/>
    </Window.InputBindings>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="ЗМЕЙКА" FontSize="36" FontWeight="ExtraBold" 
                   HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,10" 
                   FontFamily="Comic Sans MS" Width="650">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFEF4C9E" Offset="0"/>
                    <GradientStop Color="#FFD6336C" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <!-- Игровое поле + счёт -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <!-- Панель с рекордом и очками -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Рекорд: "
                           FontSize="24"
                           FontWeight="Bold"
                           FontFamily="Comic Sans MS"
                           Margin="0,0,5,0"
                           Foreground="Black"/>

                <TextBlock x:Name="MaxScoreTextBlock"
                           Text="0"
                           FontSize="24"
                           FontWeight="Bold"
                           FontFamily="Comic Sans MS"
                           Margin="0,0,20,0"
                           Foreground="Black"/>

                <TextBlock Text="Очки: "
                           FontSize="24"
                           FontWeight="Bold"
                           FontFamily="Comic Sans MS"
                           Margin="0,0,5,0"
                           Foreground="Black"/>

                <TextBlock x:Name="ScoreValueTextBlock"
                           Text="0"
                           FontSize="24"
                           FontWeight="Bold"
                           FontFamily="Comic Sans MS"
                           Foreground="Black"/>
            </StackPanel>

            <!-- Игровое поле -->
            <Border Width="600" Height="340" CornerRadius="20" ClipToBounds="True" Background="#A7D977">
                <Canvas Background="Transparent" Width="600" Height="340" ClipToBounds="True" SnapsToDevicePixels="True">
                    <!-- Отрисовка змейки -->
                    <ItemsControl ItemsSource="{Binding SnakeParts}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Ellipse 
                                    Width="20" 
                                    Height="20" 
                                    Fill="Green"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>

                    <!-- Еда -->
                    <Ellipse 
                        Width="20" 
                        Height="20" 
                        Fill="Red"
                        Canvas.Left="{Binding FoodPosition.X}"
                        Canvas.Top="{Binding FoodPosition.Y}"/>
                </Canvas>
            </Border>
        </StackPanel>

        <!-- Нижняя панель -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Выбор скорости змейки и кнопки в одном ряду -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,15,0,0"
                        Panel.ZIndex="100"
                        Visibility="{Binding IsGameStarted, Converter={StaticResource BoolToVisibilityConverter}}"
                        Grid.Row="1">

                <!-- Текст слева -->
                <TextBlock Text="Выберите скорость змейки:"
                           FontSize="16"
                           FontWeight="Bold"
                           FontFamily="Comic Sans MS"
                           Margin="0,0,10,30"
                           VerticalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FFEF4C9E" Offset="0"/>
                            <GradientStop Color="#FFD6336C" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <!-- Кнопки скорости -->
                <Button Content="Медленно"
                        Command="{Binding SetSlowSpeedCommand}"
                        Padding="10,5"
                        Margin="0,0,5,30"
                        FontFamily="Comic Sans MS"
                        FontSize="14"
                        Background="#FFEF4C9E"
                        Foreground="White"
                        BorderBrush="Transparent"
                        IsEnabled="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>

                <Button Content="Средне"
                        Command="{Binding SetMediumSpeedCommand}"
                        Padding="10,5"
                        Margin="5,0,5,30"
                        FontFamily="Comic Sans MS"
                        FontSize="14"
                        Background="#FFEF4C9E"
                        Foreground="White"
                        BorderBrush="Transparent"
                        IsEnabled="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>

                <Button Content="Быстро"
                        Command="{Binding SetFastSpeedCommand}"
                        Padding="10,5"
                        Margin="5,0,0,30"
                        FontFamily="Comic Sans MS"
                        FontSize="14"
                        Background="#FFEF4C9E"
                        Foreground="White"
                        BorderBrush="Transparent"
                        IsEnabled="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
            </StackPanel>
        </Grid>

        <!-- Кнопка Start -->
        <Button Content="Start" Command="{Binding Start}" 
                Visibility="{Binding IsGameStarted, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                FontSize="48" FontWeight="Bold" Foreground="White"
                Background="#CCD6336C" BorderBrush="Transparent"
                Grid.RowSpan="3"/>

        <!-- Пауза -->
        <Grid Background="#80000000"
              Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter2}}"
              IsHitTestVisible="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Grid.RowSpan="3">
            <Border Background="#FFFDE6F2"
                    BorderBrush="#FFD6336C"
                    BorderThickness="3"
                    CornerRadius="20"
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="Пауза"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   FontFamily="Comic Sans MS">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFEF4C9E" Offset="0"/>
                                    <GradientStop Color="#FFD6336C" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>

                    <Button Content="Продолжить"
                            Command="{Binding ResumeCommand}"
                            FontFamily="Comic Sans MS"
                            FontSize="16"
                            Padding="10,5"
                            Margin="0,0,0,10"
                            Background="#FFEF4C9E"
                            Foreground="White"
                            BorderBrush="Transparent"/>

                    <Button Content="Рестарт"
                            Command="{Binding RestartCommand}"
                            FontFamily="Comic Sans MS"
                            FontSize="16"
                            Padding="10,5"
                            Margin="0,0,0,10"
                            Background="#FFEF4C9E"
                            Foreground="White"
                            BorderBrush="Transparent"/>

                    <Button Content="Выход"
                            Command="{Binding ExitCommand}"
                            FontFamily="Comic Sans MS"
                            FontSize="16"
                            Padding="10,5"
                            Background="#FFEF4C9E"
                            Foreground="White"
                            BorderBrush="Transparent"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
