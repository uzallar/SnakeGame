<Window x:Class="SnakeGame.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        Focusable="True"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="Змейка" Height="550" Width="700"
        Background="#D0F0C0">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter2"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Up" Command="{Binding MoveUpCommand}" />
        <KeyBinding Key="Down" Command="{Binding MoveDownCommand}" />
        <KeyBinding Key="Left" Command="{Binding MoveLeftCommand}" />
        <KeyBinding Key="Right" Command="{Binding MoveRightCommand}" />
        <KeyBinding Key="Esc" Command="{Binding PauseCommand}"/>
    </Window.InputBindings>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="10,0,0,0"
            Panel.ZIndex="100"
            Visibility="{Binding IsGameStarted, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Выберите скорость змейки:" 
               FontSize="14" 
               FontWeight="Bold"
               FontFamily="Comic Sans MS"
               Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Медленно" 
                Command="{Binding SetSlowSpeedCommand}"
                Padding="10,5"
                Margin="0,0,5,0"
                FontFamily="Comic Sans MS"
                IsEnabled="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                <Button Content="Средне" 
                Command="{Binding SetMediumSpeedCommand}"
                Padding="10,5"
                Margin="5,0,5,0"
                FontFamily="Comic Sans MS"
                IsEnabled="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                <Button Content="Быстро" 
                Command="{Binding SetFastSpeedCommand}"
                Padding="10,5"
                Margin="5,0,0,0"
                FontFamily="Comic Sans MS"
                IsEnabled="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
            </StackPanel>
        </StackPanel>

        <!-- Заголовок -->
        <TextBlock Text="ЗМЕЙКА" FontSize="36" FontWeight="ExtraBold" 
                   HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,10" 
                   FontFamily="Comic Sans MS" Width="650">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFEF4C9E" Offset="0"/>
                    <GradientStop Color="#FFD6336C" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <!-- Игровое поле + рекорд -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <!-- Панель с рекордом -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Рекорд: " FontSize="24" FontWeight="Bold" FontFamily="Comic Sans MS"/>
                <TextBlock x:Name="MaxScoreTextBlock" FontSize="24" FontWeight="Bold" Foreground="Black" FontFamily="Comic Sans MS"/>
            </StackPanel>

            <!-- Игровое поле -->
            <Border Width="650" Height="350" CornerRadius="20" ClipToBounds="True" Background="#A7D977">
                <Canvas Background="Transparent" Width="600" Height="400" ClipToBounds="True" SnapsToDevicePixels="True">
                    <!-- Отрисовка змейки -->
                    <ItemsControl ItemsSource="{Binding SnakeParts}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Ellipse 
                                    Width="20" 
                                    Height="20" 
                                    Fill="Green"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>

                    <!-- Отрисовка еды -->
                    <Ellipse 
                        Width="20" 
                        Height="20" 
                        Fill="Red"
                        Canvas.Left="{Binding FoodPosition.X}"
                        Canvas.Top="{Binding FoodPosition.Y}"/>
                </Canvas>
            </Border>
        </StackPanel>

        <!-- Текущий счёт -->
        <TextBlock x:Name="ScoreText" Grid.Row="2" Text="Очки: " FontSize="24" FontWeight="ExtraBold" 
                   HorizontalAlignment="Center" TextAlignment="Center" Margin="0,15,0,0" 
                   FontFamily="Comic Sans MS" Width="650">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFEF4C9E" Offset="0"/>
                    <GradientStop Color="#FFD6336C" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <!-- Кнопка Start - на весь экран -->
        <!-- Кнопка Start - добавлен конвертер для правильного отображения -->
        <Button Content="Start" Command="{Binding Start}" 
        Visibility="{Binding IsGameStarted, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        FontSize="48" FontWeight="Bold" Foreground="White"
        Background="#CCD6336C" BorderBrush="Transparent"
        Grid.RowSpan="3"/>
        <!-- Оверлей паузы -->
        <Grid Background="#80000000"
      Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter2}}"
      IsHitTestVisible="True"
      Grid.RowSpan="3">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Пауза" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                <Button Content="Продолжить" 
                Command="{Binding ResumeCommand}" 
                Padding="10,5" 
                Margin="0,0,0,10"
                IsEnabled="{Binding IsGameStarted}"/>
                <Button Content="Рестарт" 
                Command="{Binding RestartCommand}" 
                Padding="10,5" 
                Margin="0,0,0,10"
                IsEnabled="{Binding IsGameStarted}"/>
                <Button Content="Выход" 
                Command="{Binding ExitCommand}" 
                Padding="10,5"
                IsEnabled="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>