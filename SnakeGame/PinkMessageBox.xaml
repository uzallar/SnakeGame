<Window x:Class="SnakeGame.PinkMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" Background="#FFF0F5"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True">
    <Border Background="#FFF0F5" BorderBrush="HotPink" BorderThickness="3"
            CornerRadius="15" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap"
                       FontSize="20" FontWeight="Bold"
                       Foreground="HotPink" TextAlignment="Center"
                       VerticalAlignment="Center" Margin="0,0,0,10"/>

            <!-- StackPanel для кнопок -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="YesButton" Content="Да" Width="100" Margin="10,0"
                        Background="DeepPink" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="YesButton_Click" Visibility="Collapsed"/>
                <Button x:Name="NoButton" Content="Нет" Width="100" Margin="10,0"
                        Background="LightPink" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="NoButton_Click" Visibility="Collapsed"/>
                <Button x:Name="OkButton" Content="ОК" Width="100" Margin="10,0"
                        Background="Pink" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>